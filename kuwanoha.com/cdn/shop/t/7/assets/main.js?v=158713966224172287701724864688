window.addEventListener("DOMContentLoaded",function(){function ButtonAnime(){var scroll=$(window).scrollTop(),pos1=$(".pos_upmove").offset().top,pos2=$(".pos_downmove").offset().top;scroll<pos1||scroll>pos2?($("#btn-order-fix").addClass("DownMove"),$("#btn-order-fix").removeClass("UpMove"),$("#btn-fix").addClass("DownMove"),$("#btn-fix").removeClass("UpMove")):($("#btn-order-fix").addClass("UpMove"),$("#btn-order-fix").removeClass("DownMove"),$("#btn-fix").addClass("UpMove"),$("#btn-fix").removeClass("DownMove"))}window.document.URL.match("/products/")&&$(window).scroll(function(){ButtonAnime()}),$("#btn-order-fix, .btn-order, .btn-lp").click(function(){var headerH=$(".site-header__wrapper").outerHeight(!0),elmHash=$(this).attr("href"),elemPos=$(elmHash).offset().top,pos=elemPos-headerH-20;return $("body,html").animate({scrollTop:pos},700),!1}),$(window).on("scroll",function(){$(".fadein").each(function(){var elemPos=$(this).offset().top,scroll=$(window).scrollTop()-200,windowHeight=$(window).height();scroll>elemPos-windowHeight&&$(this).addClass("is-active")})}),$(".fadein").each(function(){var elemPos=$(this).offset().top,scroll=$(window).scrollTop(),windowHeight=$(window).height();scroll>elemPos-windowHeight*1&&$(this).addClass("is-active")})});
